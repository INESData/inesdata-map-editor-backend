<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


	<changeSet author="gmv" id="1.0.0-data-source">
		<createTable tableName="DATA_SOURCE">
			<column name="id" type="BIGINT">
				<constraints nullable="false" unique="true" primaryKey="true" />
			</column>
			<column name="name" type="VARCHAR(255)"/>
			<column name="type" type="BIGINT"/>
			<column name="version" type="BIGINT" defaultValueNumeric="0"/>
		</createTable>
		<addForeignKeyConstraint baseTableName="DATA_SOURCE"
                                 baseColumnNames="type"
                                 constraintName="fk_data_source_type"
                                 referencedTableName="DATA_SOURCE_TYPE"
                                 referencedColumnNames="id"/>
	</changeSet>

</databaseChangeLog>
