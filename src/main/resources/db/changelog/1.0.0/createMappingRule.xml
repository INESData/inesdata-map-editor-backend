<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<changeSet author="gmv" id="1.0.0-mapping-rule">
		<createTable tableName="MAPPING_RULE">
			<column name="id" type="BIGINT">
				<constraints nullable="false" unique="true" primaryKey="true"/>
			</column>
			<column name="source" type="BIGINT">
				<constraints nullable="true"/>
			</column>
			<column name="ontology" type="BIGINT">
				<constraints nullable="true"/>
			</column>
			<column name="source_field" type="VARCHAR(255)">
				<constraints nullable="true"/>
			</column>
			<column name="target_field" type="VARCHAR(255)">
				<constraints nullable="true"/>
			</column>
			<column name="version" type="BIGINT" defaultValueNumeric="0"/>
		</createTable>

		<addForeignKeyConstraint baseTableName="MAPPING_RULE"
        						 baseColumnNames="source"
                                 constraintName="FK_mapping_field_source"
                                 referencedColumnNames="id"
                                 referencedTableName="DATA_SOURCE"/>

		<addForeignKeyConstraint baseTableName="MAPPING_RULE"
        						 baseColumnNames="ontology"
                                 constraintName="FK_mapping_field_ontology"
                                 referencedColumnNames="id"
                                 referencedTableName="ONTOLOGY"/>
	</changeSet>

</databaseChangeLog>
