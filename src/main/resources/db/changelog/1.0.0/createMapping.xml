<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<changeSet author="gmv" id="1.0.0-mapping">
		<createTable tableName="MAPPING">
			<column name="id" type="BIGINT">
				<constraints nullable="false" unique="true" primaryKey="true"/>
			</column>
			<column name="name" type="VARCHAR(255)">
				<constraints nullable="true"/>
			</column>
			<column name="fields" type="BIGINT">
				<constraints nullable="true"/>
			</column>
			<column name="rml" type="VARCHAR(255)">
			</column>
			<column name="namespaces" type="BIGINT">
				<constraints nullable="true"/>
			</column>
			<column name="version" type="BIGINT" defaultValueNumeric="0"/>
		</createTable>

		<addForeignKeyConstraint baseTableName="MAPPING"
        						 baseColumnNames="fields"
                                 constraintName="FK_mapping_fields"
                                 referencedColumnNames="id"
                                 referencedTableName="MAPPING_FIELD"/>

		<addForeignKeyConstraint baseTableName="MAPPING"
        						 baseColumnNames="namespaces"
                                 constraintName="FK_mapping_namespaces"
                                 referencedColumnNames="id"
                                 referencedTableName="NAMESPACE"/>
	</changeSet>

</databaseChangeLog>
